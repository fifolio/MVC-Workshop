<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />

    <title>Edit Task</title>

    <style>
      .main {
        margin-top: 10%;
        padding: 15px;
        width: 500px;
        background: #eef6fb;
        border-radius: 10px;
        background-color: whitesmoke;
      }
      .main h1 {
        padding: 5px 0;
      }
      .main form {
        margin: 30px 0;
      }
      .main form input {
        float: left;
        width: 70%;
      }
      .editBtn {
        text-decoration: none;
      }
    </style>
  </head>

  <body class="bg-dark">
    <center>
      <div class="main">
        <h3>📝 My tasks list</h3>
        <!-- Add a Task form -->
        <form action="/create" method="POST">
          <div class="mb-3 my-4">
            <input
              type="text"
              class="form-control"
              placeholder="✍️..."
              name="title"
            />
          </div>

          <button type="submit" class="btn btn-success">Add Task ✔️</button>
        </form>
        <hr />
        <!-- Show Tasks -->
        <% if(todotasks.length > 0){ %>

        <div class="container list-group">
          <div class="row">
            <% todotasks.forEach(tasks => { %> <% if(tasks._id == idTask ) { %>
            <form action="/update/<%=tasks._id%>?_method=PUT" method="POST">
              <input type="text" value="<%= tasks.title %>" name="title" />
            </form>

            <% } else { %>

            <div class="col-2 my-1">
              <a
                class="editBtn list-group-item list-group-item-action list-group-item-info"
                href="/update/<%=tasks._id%>"
                >✏️</a
              >
            </div>
            <div class="col-8 my-1">
              <a
                href="#"
                class="taskInput list-group-item list-group-item-action"
                ><%= tasks.title%>
              </a>
            </div>
            <div class="col-2 my-1">
              <!-- <a
                class="editBtn list-group-item list-group-item-action list-group-item-danger"
                href="/update/<%=tasks._id%>"
                >🗑️</a
              > -->
            </div>
            <% } %> <% }) %>
          </div>
        </div>
        <% }else { %>
        <h4>You have no tasks</h4>
        <% } %>
      </div>
    </center>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
